#include "ledTask.h"

//Ejercicio 1

void CreateLedTaskEj1(){
	xTaskCreate(ledToggleTaskEj1, "ledToggleTaskLed1", 128, 1, 1, NULL);
	xTaskCreate(ledToggleTaskEj1, "ledToggleTaskLed2", 128, 2, 1, NULL);
}

void ledToggleTaskEj1(void *pArg){
	int numLed = (int) pArg;
	while(1){
		LED_TOGGLE(numLed);
		vTaskDelay(100);
	}
}

//Ejercicio 2

void CreateLedTaskEj2(){
	xTaskCreate(ledToggleTaskEj2, "ledToggleTaskLed1", 128, 1, 1, NULL);
	xTaskCreate(ledToggleTaskEj2, "ledToggleTaskLed2", 128, 2, 1, NULL);
}

void ledToggleTaskEj2(void *pArg){
	int numLed = (int) pArg;
	while(1){
		LED_TOGGLE(numLed);
		vTaskDelay(200 + 100 * (numLed-1));
	}
}

//Ejercicio 3

void CreateLedTaskEj3(){
	xTaskCreate(ledToggleTaskEj3, "ledToggleTaskLed1", 128, 1, 1, NULL);
}

void ledToggleTaskEj3(void *pArg){
	int numLed = (int) pArg;
	if(numLed == 1){
		for(int i = 0; i < 5; i++){
			LED_TOGGLE(numLed);
			vTaskDelay(200 + 100 * (numLed-1));
		}
		xTaskCreate(ledToggleTaskEj3, "LedToggleTaskLed2", 128, numLed+1, 1, NULL);
		vTaskDelete(NULL);
	}else if (numLed ==2){
		while(1){
			LED_TOGGLE(numLed);
			vTaskDelay(200 + 100 * (numLed-1));
		}
	}
}

//Ejercicio 4

void CreateLedTaskEj4(){
	xTaskCreate(ledAnimationTaskEj4, "LedAnimationTask", 128, NULL, 1, NULL);
}

void ledAnimationTaskEj4(void *pArg){
	while(1){
		switch(ReadButton()){
		case 1: animation1();
		case 2: animation2();
		case 3: animation3();
		}
	}
}
