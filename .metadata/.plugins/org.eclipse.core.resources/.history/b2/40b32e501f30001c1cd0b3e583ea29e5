#include "ledTask.h"

TaskHandle_t taskHandler;

//Ejercicio 1

void CreateLedTaskEj1(){
	xTaskCreate(ledTaskEj1, "ledTaskLed1", 128, 1, 1, NULL);
	xTaskCreate(ledTaskEj1, "ledTaskLed2", 128, 2, 1, NULL);
}

void ledTaskEj1(void *pArg){
	int numLed = (int) pArg;
	while(1){
		LED_TOGGLE(numLed);
		vTaskDelay(100);
	}
}

//Ejercicio 2

void CreateLedTaskEj2(){
	xTaskCreate(ledTaskEj2, "ledTaskLed1", 128, 1, 1, NULL);
	xTaskCreate(ledTaskEj2, "ledTaskLed2", 128, 2, 1, NULL);
}

void ledTaskEj2(void *pArg){
	int numLed = (int) pArg;
	while(1){
		LED_TOGGLE(numLed);
		vTaskDelay(200 + 100 * (numLed-1));
	}
}

//Ejercicio 3

void CreateLedTaskEj3(){
	xTaskCreate(ledTaskEj3, "ledTaskLed1", 128, 1, 1, NULL);
}

void ledTaskEj3(void *pArg){
	int numLed = (int) pArg;
	if(numLed == 1){
		for(int i = 0; i < 5; i++){
			LED_TOGGLE(numLed);
			vTaskDelay(200 + 100 * (numLed-1));
		}
		xTaskCreate(ledTaskEj3, "LedTaskLed2", 128, numLed+1, 1, NULL);
		vTaskDelete(NULL);
	}else if (numLed ==2){
		while(1){
			LED_TOGGLE(numLed);
			vTaskDelay(200 + 100 * (numLed-1));
		}
	}
}

//Ejercicio 4

void CreateLedTaskEj4(){
	xTaskCreate(ledAnimationTaskEj4, "LedAnimationTask", 128, NULL, 1, NULL);
}

void ledAnimationTaskEj4(void *pArg){
	while(1){
		switch(ReadButton()){
		case 1: animation1();
		case 2: animation2();
		case 3: animation3();
		}
	}
}

//Ejercicio 5

//Ejercicio 6 (Ejercicio 1 Parte 2)

void CreateLedTaskEj6(){
	xTaskCreate(joyTaskEj6, "joyTask", 128, NULL, 1, NULL);
}

void joyTaskEj6(){
	while(1){
		if(ReadButton()){
			animation1();
		}
		vTaskDelay(10);
	}
}

//Ejercicio 7 (Ejercicio 2 Parte 2)

void CreateLedTaskEj7(){
	xTaskCreate(joyTaskEj7, "joyTask", 150, NULL, 1, NULL);
	xTaskCreate(ledTaskEj7, "ledTask", 150, NULL, 1, &taskHandler);
}

void joyTaskEj7(){
	while(1){
		if(ReadButton()){
			xTaskNotifyGive(taskHandler);
		}
		vTaskDelay(100);
	}
}

void ledTaskEj7(void){
	while(1){
		ulTaskNotifyTake(pdTRUE, portMAX_DELAY);
		animation1();
		vTaskDelay(100);
	}
}

